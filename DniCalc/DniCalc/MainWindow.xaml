<Window x:Class="DniCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DniCalc"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <TextBox x:Name="tbDniNumber" Grid.Row="0" Grid.Column="0"/>
        <Label x:Name="lblChar" Content="#" Grid.Row="0" Grid.Column="1"/>
        <Button x:Name="btngetChar" Content="Get char" Grid.ColumnSpan="2"  Grid.Row="1" Click="btngetChar_Click" />
    </Grid>
</Window>
